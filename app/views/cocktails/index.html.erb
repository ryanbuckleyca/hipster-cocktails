<h1>List of cocktails</h1>
<div class="row">
<% @cocktails.each do |cocktail| %>
  <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-xs-12">
    <div class="card mb-3">
      <div class="card-image" style="background-image:url('https://source.unsplash.com/200x200/?cocktail,<%= cocktail.name %>')"></div>
      <p class="p-2 m-0 text-center"><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
    </div>
  </div>
<% end %>
</div>
