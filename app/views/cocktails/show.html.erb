<% if @cocktail.photo.attached? %>
<%    cocktail_img = cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
<%    cocktail_img = "https://source.unsplash.com/200x200/?cocktail,#{@cocktail.name}" %>
<% end %>

<div class="row">
  <div class="col-md-8 col-sm-12">
    <div class="cocktail-info">
      <img src="<%= cocktail_img %>" class="cocktail-image">
      <div class="flex-grow">
        <h1><%= @cocktail.name %></h1>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %>
            <%= dose.ingredient.name %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-12">
    <h3>Add to <%= @cocktail.name %></h3>
    <%= simple_form_for [@cocktail, Dose.new] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
    <% end %>
  </div>
</div>


